<%- include('layout/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="mb-4">Add Medicines</h1>
            
            <% if (typeof message !== 'undefined') { %>
                <div class="alert alert-info">
                    <%= message %>
                </div>
            <% } %>

            <!-- Back Button -->
            <button onclick="window.history.back();" class="btn btn-secondary mb-3">Go Back</button>

            <form action="/add-medicine" method="POST" class="border p-4 shadow-sm rounded">
                <div class="mb-3">
                    <label for="medical_name" class="form-label">Medical Name</label>
                    <input type="text" id="medical_name" name="medical_name" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description" class="form-control" rows="4"></textarea>
                </div>

                <div class="mb-3">
                    <label for="usage" class="form-label">Usage</label>
                    <textarea id="usage" name="usage" class="form-control" rows="4"></textarea>
                </div>

                <div class="mb-3">
                    <label for="dosage" class="form-label">Dosage</label>
                    <input type="text" id="dosage" name="dosage" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="side_effects" class="form-label">Side Effects</label>
                    <input type="text" id="side_effects" name="side_effects" class="form-control">
                </div>

                <div class="mb-3">
                    <label class="form-label">Alternative Brands</label>
                    <div id="alternative_brands">
                        <!-- Dynamic fields will be added here -->
                    </div>
                    <button type="button" id="add_brand_button" class="btn btn-secondary mt-2">Add More Brands</button>
                </div>

                <button type="submit" class="btn btn-primary">Add Medicine</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const addBrandButton = document.getElementById('add_brand_button');
        const brandsContainer = document.getElementById('alternative_brands');

        addBrandButton.addEventListener('click', function () {
            const brandField = document.createElement('div');
            brandField.classList.add('mb-2');
            brandField.innerHTML = `
                <input type="text" name="alternative_brands_name[]" class="form-control mb-2" placeholder="Brand Name" required>
                <input type="text" name="alternative_brands_link[]" class="form-control" placeholder="Brand Link" required>
            `;
            brandsContainer.appendChild(brandField);
        });

        // Pre-fill one set of fields
        addBrandButton.click();
    });
</script>

<%- include('layout/footer') %>
